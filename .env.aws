# Environment variables for Remote Desktop Relay Server on AWS

# Relay Server Configuration
RELAY_HOST=0.0.0.0
RELAY_PORT=8765

# Python Logging
RD_LOG_LEVEL=INFO

# Performance Settings (adjust based on EC2 instance type)
# For t3.micro: lower values
# For t3.small+: higher values

# Host (Screen Sharer) Settings
RD_HOST_FPS=24
RD_HOST_JPEG_QUALITY=60

# Buffer sizes (increase if you see network issues)
RD_HOST_SEND_BUFFER_SIZE=131072
RD_CLIENT_RECV_BUFFER_SIZE=131072

# Advanced Settings
# Enable WebSocket compression (reduces bandwidth, increases CPU)
WS_COMPRESSION=permessage-deflate

# Connection timeout (seconds)
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10
